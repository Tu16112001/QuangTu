#include <stdio.h>
int main()
{
  int array[100], search, i, n;

  printf("Nhập số phần tử trong mảng\n");
  scanf("%d", &n);
  while(n == 0) {          
  continue;            
}
  printf("Nhập %d số nguyên\n", n);

  for (i = 0; i < n; i++){
    scanf("%d", &array[i]);
    printf("\narray[%d]:",i+1);
}
  printf("\nNhập một số để tìm kiếm\n");
  scanf("%d", &search);

  for (i = 0; i < n; i++)
  {
    if (array[i] == search)    //* Nếu phần tử bắt buộc được tìm thấy 
    {
      printf("%d có mặt tại vi tri %d\n", search, i+1);
      break;
    }
  }
  if (i == n)
    printf("%d không có trong mảng\n", search);
  return 0;
}