#include <stdio.h>
int main(){
	int a[10], i;
//nhap
	for(i=0;i<10;i++)
	{
	printf("\n nhap a[%d]= ",i);
	scanf("%d",&a[i]);
	}
//xuat
	for(i=0;i<10;i++)
	{
		printf("\n a[%d]= %d",i,a[i]);
	}
//chan
	printf("\nchan");
	for(i=-0;i<10;i++)
	if(a[i]%2 == 0)
	{
		printf("\n a[%d]= %d la so chan",i,a[i]);
	}
}
