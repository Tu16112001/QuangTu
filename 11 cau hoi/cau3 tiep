#include <stdio.h>

 int main() {
   int i, j;

   for( int i = 1; i <10; i++) {
  for( int j = 0; j < i; j++) {
       printf("*");
     }
     printf("\n");
   }
   return 0;
 }

 #include <stdio.h>

 int main() {
   int i, j, n;
   do {
     scanf("%d", &n);
   }
   while(n >10);// hang
  for( int i = 1; i <= n; i++) {
  for( int j = 0; j < i; j++) {
       printf("*");
     }
     printf("\n");
   }
   return 0;
 }

 #include <stdio.h>
int main(){
    int i,j;
    char input, alphabet = 'A';
    scanf("%c",&input);
    //duyet tu character A
    for(i = 1; i<=(input-'A' +1); i++)
    {
        for(j =1; j<=i; j++){
            printf("%c",alphabet);
        }
        ++alphabet;
        printf("\n");
    }

    return 0;
}

#include <stdio.h>
int main(){
    int i,j,h;
    do{
      printf("nhap chieu cao h:");
      scanf("%d",&h);
    }while(h < 2);

     for( int i = h; i >= 1; i--) 
     {
      for( int j = 1; j <= i; j++) 
        printf("*");
        printf("\n");
    }

    return 0;
}