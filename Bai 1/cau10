#include<stdio.h>  

 int main() {  
int a[31],n,i;  

printf("Nhap mot so bat ky: ");  
scanf("%d",&n);  
for(i=0;n>0;i++)  
{  
a[i]=n%2;  //Chia số đó cho 2 với toán tử % và lưu phần dư vào trong mảng
n=n/2;  //: Chia số cho 2 với toán tử
}  
printf("\nDang nhi phan cua so vua nhap la = ");  
for(i=i-1;i>=0;i--) // Lặp lại bước 2 tới khi số là lớn hơn 0
{  
printf("%d",a[i]);  
}  
} 