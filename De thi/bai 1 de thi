#include <stdio.h>
#include <math.h>

int main(){
    float a,b,c;
    float s,p;
    printf("\nNhap canh a : ");
    scanf("%f",&a);
    printf("\nNhap canh b :");
    scanf("%f",&b);
    printf("\nNhap canh c : ");
    scanf("%f",&c);

    if ((a+b>c)|| (a+c>b)||(b+c>a))
    {  p =(a+b+c)/2;
        s = sqrt(p*(p-a)*(p-b)*(p-c));
        printf("\ndien tich tam giac la: s = %f\n",s);
    }
    else {
        printf("\nday ko pai 3 canh tam giac:");
    }
    return 0;
}